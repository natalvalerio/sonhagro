    <main>
        <br/>
        <!--input type="text" id="Pesquisar" placeholder="üîé Pesquisar..." onkeyup="Pesquisar()"-->
        <a href="javascript:window.history.back()"><button>VOLTAR üîô</button></a>
        
        <label>Data Inicial: <input type="date" id="dataInicio" class="quadrado"></label>
        <label>Data Final: <input type="date" id="dataFim" class="quadrado"></label>
        <button onclick="gerarRelatorio()">Gerar Relat√≥rio</button>
        <button onclick="exportarPDF()">Exportar para PDF</button>
        
        <div id="loader">
            <img src="../img/loading.gif" alt="Carregando...">
        </div>
        
        <div id="relatorio">
            <h3>Cliente: <span><script>document.write(cliente);</script></span></h3>
            <h3>Total de Atendimentos: <span id="total">0</span></h3>
            <h3>Atendimentos por Canal</h3>
            <div id="resultadoCanais"></div>
            <h3>Atendimentos por Nicho</h3>
            <div id="resultadoNichos"></div>
            <h3>Atendimentos por Usu√°rio</h3>
            <div id="resultadoUsuarios"></div>
            <h3>Atendimentos por Status</h3>
            <div id="resultadoStatus"></div>
        </div>

        <script>
            async function gerarRelatorio() {
                const dataInicio = document.getElementById("dataInicio").value;
                const dataFim = document.getElementById("dataFim").value;
                if (!dataInicio || !dataFim) {
                    showWarning("Selecione um per√≠odo v√°lido!");
                    return;
                }
                
                let query = `SELECT * FROM qualit WHERE cliente='${cliente}' AND data BETWEEN '${dataInicio}' AND '${dataFim}'`;
                
                document.getElementById("loader").style.display = "flex";
                try {
                    const data = await fetchAPI(query);
                    
                    if (!data || data.length === 0) {
                        showWarning("Nenhum dado encontrado.");
                        return;
                    }
                    
                    processarDados(data);
                } catch (error) {
                    console.error("Erro ao buscar dados:", error);
                    showWarning("Erro ao buscar os dados.");
                }
                document.getElementById("loader").style.display = "none";
                document.getElementById("relatorio").style.display = "grid";
            }

            function processarDados(dados) {
                let totalAtendimentos = dados.length;
                let canais = {};
                let nichos = {};
                let usuarios = {};
                let status = {};
                
                dados.forEach(item => {
                    canais[item.canal] = (canais[item.canal] || 0) + 1;
                    nichos[item.nicho] = (nichos[item.nicho] || 0) + 1;
                    usuarios[item.usuario] = (usuarios[item.usuario] || 0) + 1;
                    status[item.status] = (status[item.status] || 0) + 1;
                });
                
                document.getElementById("total").textContent = totalAtendimentos;
                exibirTabela("resultadoCanais", canais, "Canal");
                exibirTabela("resultadoNichos", nichos, "Nicho");
                exibirTabela("resultadoUsuarios", usuarios, "Usu√°rio");
                exibirTabela("resultadoStatus", status, "Status");
            }

            function exibirTabela(id, obj, tipo) {
                let html = `<table><tr><th>Tipo (${tipo})</th><th>Quantidade</th></tr>`;
                for (let key in obj) {
                    html += `<tr><td>${key}</td><td>${obj[key]}</td></tr>`;
                }
                html += `</table>`;
                document.getElementById(id).innerHTML = html;
            }

            // Fun√ß√£o para remover emojis do texto
            function removeEmojis(text) {
                // Regex para identificar emojis (Unicode)
                return text.replace(/[\p{Emoji_Presentation}|\p{Emoji}\u200D]+/gu, '').trim();
            }

            function exportarPDF() {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();
                let y = 10;

                // Verificar se a p√°gina est√° sendo carregada a partir de file:// (localmente)
                if (window.location.protocol !== 'file:') {
                    try {
                        const img = new Image();
                        img.src = "../img/logo.png";
                        doc.addImage(img, 'PNG', 10, y, 50, 20);
                        y += 25;
                    } catch (error) {
                        console.warn("N√£o foi poss√≠vel carregar a logo:", error);
                    }
                }

                // T√≠tulo
                const pageWidth = doc.internal.pageSize.width;
                const title = removeEmojis("Relat√≥rio de Atendimentos üìä");
                const title2 = removeEmojis(cliente);
                const textWidth = doc.getTextWidth(title);
                const textWidth2 = doc.getTextWidth(title2);
                
                const x = (pageWidth - textWidth) / 2;
                doc.text(title, x, y);
                y += 10;
                
                const x2 = (pageWidth - textWidth2) / 2;
                doc.text(title2, x2, y);
                
                y += 10;

                // Total de atendimentos
                const total = document.getElementById("total").textContent;
                if (total === "0") {
                    showWarning("N√£o h√° atendimentos para exportar.");
                    return;
                } else {
                    doc.setFontSize(12);
                    const totalText = removeEmojis(`Total de Atendimentos: ${total}`);
                    doc.text(totalText, 10, y);
                    y += 10;
                }

                // Se√ß√µes para exportar
                const sections = [
                    { title: removeEmojis("Atendimentos por Canal"), id: "resultadoCanais" },
                    { title: removeEmojis("Atendimentos por Nicho"), id: "resultadoNichos" },
                    { title: removeEmojis("Atendimentos por Usu√°rio"), id: "resultadoUsuarios" },
                    { title: removeEmojis("Atendimentos por StatusÔ∏è"), id: "resultadoStatus" }
                ];

                sections.forEach(section => {
                    y += 10;
                    doc.text(section.title, 10, y);
                    y += 10;

                    const table = document.getElementById(section.id).querySelector("table");
                    if (table) {
                        const rows = Array.from(table.rows).map(row => 
                            Array.from(row.cells).map(cell => removeEmojis(cell.textContent))
                        );
                        doc.autoTable({
                            startY: y,
                            head: [rows[0]], // Cabe√ßalho
                            body: rows.slice(1), // Dados
                            theme: "grid",
                            styles: { fontSize: 10 },
                            headStyles: { fillColor: [200, 200, 200] },
                            margin: { top: 10, left: 10 }
                        });
                        y = doc.lastAutoTable.finalY; // Atualiza a posi√ß√£o Y ap√≥s cada tabela
                    } else {
                        const noDataText = removeEmojis("Nenhum dado dispon√≠vel");
                        doc.text(noDataText, 10, y);
                        y += 10;
                    }
                });

                // Adicionar data e hora atual
                y += 10;
                const dataHoraAtual = new Date().toLocaleString();
                doc.setFontSize(10);
                const dateText = removeEmojis(`Gerado em: ${dataHoraAtual}`);
                doc.text(dateText, 10, y);

                doc.save("relatorio_atendimentos.pdf");
            }
        </script>
    </main>
</body>
